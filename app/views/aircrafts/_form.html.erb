<%= form_with(model: aircraft, local: true) do |form| %>
  <% if aircraft.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(aircraft.errors.count, "error") %> prohibited this aircraft from being saved:</h2>

      <ul>
      <% aircraft.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :n_number %>
    <%= form.text_field :n_number, id: :aircraft_n_number %>
  </div>

  <div class="field">
    <%= form.label :serial_number %>
    <%= form.text_field :serial_number, id: :aircraft_serial_number %>
  </div>

  <div class="field">
    <%= form.label :ac_make_model_id %>
    <% if false %>
    <%= form.text_field :ac_make_model_id, id: :aircraft_ac_make_model_id %>
    <%= form.select :ac_make_model_id, AcMakeModel.all.order(:abbreviation).map{|m|[m.abbreviation, m.id]}  %>
    <% end %>
    <%= form.select :ac_make_model_id, @ac_make_models_sorted  %>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.text_area :notes, id: :aircraft_notes %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

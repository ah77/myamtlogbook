<p id="notice"><%= notice %></p>

<h1>Aircrafts</h1>

<table>
  <thead>
    <tr>
      <th>N number</th>
      <th>Serial number</th>
      <th>Ac make model</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aircrafts.each do |aircraft| %>
      <tr>
        <td><%= aircraft.n_number %></td>
        <td><%= aircraft.serial_number %></td>
        <td><%= aircraft.ac_make_model.abbreviation %></td>
        <td><%= aircraft.notes %></td>
        <td><%= link_to 'Show', aircraft %></td>
        <td><%= link_to 'Edit', edit_aircraft_path(aircraft) %></td>
        <td><%= link_to 'Destroy', aircraft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


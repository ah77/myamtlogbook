<p id="notice"><%= notice %></p>

<h1>Aircraft Listing</h1>

<table class="table table-bordered table-sm">
  <thead>
    <tr>
      <th>N-Number</th>
      <th>S/N</th>
      <th>Make/Model</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aircrafts.each do |aircraft| %>
      <tr>
        <td><%= aircraft.n_number %></td>
        <td><%= aircraft.serial_number %></td>
        <td><%= aircraft.ac_make_model.abbreviation %></td>
        <td><%= aircraft.notes %></td>
        <td><%= link_to 'Show', aircraft, class: "btn btn-success btn-sm" %></td>
        <td><%= link_to 'Edit', edit_aircraft_path(aircraft), class: "btn btn-info btn-sm"  %></td>
        <td><%= link_to 'X', aircraft, method: :delete, data: { confirm: 'Are you sure?' }, 
		class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>

<h1>Engines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Serial number</th>
      <th>Manufacturer</th>
      <th>Model</th>
      <th>Notes</th>
      <th>Aircraft</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @engines.each do |engine| %>
      <tr>
        <td><%= engine.name %></td>
        <td><%= engine.serial_number %></td>
        <td><%= engine.manufacturer %></td>
        <td><%= engine.model %></td>
        <td><%= engine.notes %></td>
        <td><%= engine.aircraft %></td>
        <td><%= link_to 'Show', engine %></td>
        <td><%= link_to 'Edit', edit_engine_path(engine) %></td>
        <td><%= link_to 'Destroy', engine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

